<div class="container">
  <div class="row">
    <div class="col-lg-10 col-xl-8 mx-auto">
      <h2 class="mb-4">
        コメント編集
      </h2>
      <%= form_with model: @comments, url: comment_path, local:true do |f| %>
        <div class="form-group row">
          <%= f.label :text, "コメント", class: "form-label col-sm-4" %>
          <div class="col-sm-8">
            <%= f.text_area :text, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-4"></div>
          <div class="col-sm-8">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>