<div class="container">
  <div class="row mb-3">
    <div class="col-12 text-center">
      <h2>投稿一覧 <span class="small">(全<%= @contribution.count %>件)</span></h2>
    </div>
  </div>

  <div class="row m-3">
    <% @contribution.each do |contribution| %>
    <div class="col-sm-6 col-xl-3 mb-4">
      <div class="card bg-light h-100 justify-content-between shadow-lg hover-img">
        <div class="card-body flex-grow-1 d-flex flex-column justify-content-between">
          <%= link_to contribution_path(contribution), class: "text-reset stretched-link" do %>
            <h5 class="card-title"><%= contribution.title %></h5>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>

