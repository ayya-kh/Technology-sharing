<div class="container">
  <div class="row">
    <div class="col-lg-10 col-xl-8 mx-auto">
      <h2 class="mb-4">
        投稿内容編集
      </h2>
      <%= form_with model: @contribution, url: contribution_path, local:true do |f| %>
        <div class="form-group row">
          <%= f.label :title, "タイトル", class: "form-label col-sm-4" %>
          <div class="col-sm-4">
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :text, "本文", class: "form-label col-sm-4" %>
          <div class="col-sm-8">
            <%= f.text_area :text, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-4"></div>
          <div class="col-sm-8">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>