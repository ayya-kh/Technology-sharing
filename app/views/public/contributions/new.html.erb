  <div class="row mb-3">
    <div class="col-12 text-center">
      <h2>投稿フォーム</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto">

       <%= form_with model: @contribution do |f| %>
       <div class="style-1b6txcu e1aqgsb44">
