<div class="container">
  <div class="row mb-3">
    <div class="col-12 text-center">
      <h2>投稿フォーム</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto">

    <%= form_with(model:[@contribution]) do |f| %>

      <% if @error_contribution.present? %>
        <div id="error_explanation">
          <h2><%= @error_contribution.errors.count %>件のエラーが発生しました。</h2>
          <ul>
            <% @error_contribution.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

        <div style="margin-top: 10px">
          <h3>タイトル</h3>
          <%= f.text_field :title, :size=>"60" %>
        </div>

        <div style="margin-top: 30px">
          <h3>本文</h3>
          <%= f.text_area :text, :size=>"60x10" %>
        </div>

        <div style="margin-top: 30px">
          <h3>動画</h3>
          <%= f.file_field :video %>
        </div>

        <div style="margin-top: 30px">
          <h3>タグ</h3>
          <%= text_field_tag :tag %>
        </div>

        <div style="margin-top: 10px">
          <%= f.submit '投稿', style: "margin-bottom: 50px;" %>
        </div>
    <% end %>
    </div>
  </div>
</div>