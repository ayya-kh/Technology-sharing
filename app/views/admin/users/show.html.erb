<div class="container">
  <div class="row">
    <div class="col-lg-10 col-xl-8 mx-auto">
      <h2 class="mb-4">
        <%= @user.name %>さんの詳細情報
      </h2>

      <table class="table table-borderless">
        <tr>
          <th style="width:25%">ユーザーID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>ユーザー名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>投稿名・コメント</th>
          <td>
            <% @user.comments.each do |comment| %>
              <%= comment.contribution.title %>・
              <%= comment.text %><br>
            <% end %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= link_to "編集する", edit_admin_user_path(@user), class:"btn btn-success" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>