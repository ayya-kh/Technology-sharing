<div class="container">
  <div class="row">
    <div class="col-lg-10 col-xl-8 mx-auto">
      <h2 class="mb-4">
        <%= @user.name %>さんの詳細情報編集
      </h2>
      <%= form_with model: @user, url: admin_user_path, local:true do |f| %>
        <div class="form-group row">
          <%= f.label :id, "ユーザーID", class: "form-label col-sm-4" %>
          <div class="col-sm-8">
            <%= f.label :id, @user.id %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :name, "氏名", class: "form-label col-sm-4" %>
          <div class="col-sm-4">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "form-label col-sm-4" %>
          <div class="col-sm-4">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>


        <div class="form-group row">
          <%= f.label :is_deleted, "ユーザーステータス", class: "form-label col-sm-4" %>
          <div class="col-sm-8">
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_deleted, false, class: "form-check-input" %>
              <%= f.label :is_deleted, "有効", value: false, class: "form-check-label" %>
            </div>
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_deleted, true, class: "form-check-input" %>
              <%= f.label :is_deleted, "退会", class: "form-check-label" %>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-4"></div>
          <div class="col-sm-8">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>

      <table class="table table-bordered">
        <tr>
          <th class="table-active">削除</th>
          <th class="table-active" style = "width:20%" >タイトル</th>
          <th class="table-active" style = "width:65%" >コメント</th>
        </tr>
        <% @user.comments.each do |comment| %>
        <tr>
          <td><%= link_to "削除", admin_comment_path(comment), method: :delete, class: "btn btn-danger" %></td>
          <td><%= comment.contribution.title %></td>
          <td><%= comment.text %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>